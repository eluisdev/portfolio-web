---
import GitHub from "./icons/GitHub.astro";
import Laravel from "./icons/Laravel.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import React from "./icons/React.astro";
import Node from "./icons/Node.astro";
import Typescript from "./icons/Typescript.astro";

const TAGS = {
  REACT: {
    name: "React.js",
    class: "bg-[#070861] text-white",
    icon: React,
  },
  LARAVEL: {
    name: "Laravel",
    class: "bg-[#8c1606] text-white",
    icon: Laravel,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  NODE: {
    name: "Nodejs",
    class: "bg-[#0a6f6a] text-white",
    icon: Node,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#187beb] text-white",
    icon: Typescript,
  },
};
const PROJECTS = [
{
    title: "Notas App",
    description:
      "This is a project inspired by the project done by Udemy instructor Juan Pablo de la Torre Valdez. This project covers key concepts about the use of hooks, state, rendering, good practices and how it is mixed with a backend that uses express with the help of Nodejs and how it relates to React in the frontend. In addition, TypeScript is used in both parts.",
    link: "https://docstecmed.umsa.bo/",
    image: "/projects/AppNotes.png",
    tag: "Available for everyone",
    github: ["https://github.com/eluisdev/notas-frontend-mern","https://github.com/eluisdev/notas-backend-mern"],
    tags: [TAGS.REACT, TAGS.NODE, TAGS.TAILWIND, TAGS.TYPESCRIPT],
  },
  {
    title: "React chat app",
    description:
      "Instant messaging web application using socket.io with the MERN stack and deployed in render (the backend) and vercel (the frontend). Because we are on free servers, the backend server usually takes a while to complete the first request when it is idle.",
    link: "https://react-chat-app-ecru-iota.vercel.app",
    image: "/projects/react-chat-app-image.png",
    tag: "Available for everyone",
    github: [
      "https://github.com/eluisdev/react-chat-client",
      "https://github.com/eluisdev/react-chat-server",
    ],
    tags: [TAGS.REACT, TAGS.NODE, TAGS.TAILWIND, TAGS.TYPESCRIPT],
  },
  {
    title: "Correspondence system",
    description:
      "System that I developed in the Medical Technology Degree at UMSA during my internship. The system is focused on keeping track of all the documentation. It was coordinated with the Information and Communications Technology Department of the Universidad Mayor de San Andres.",
    link: "https://docstecmed.umsa.bo/",
    tag: "Available only for Bolivia",
    image: "/projects/sistemadoc.png",
    github: ["https://github.com/eluisdev/TecMedProy"],
    tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
  },
  {
    title: "Spotify clone",
    description:
      "It is a simple Spotify clone where you can see file upload functions with cloudinary and the functionality of a music player.",
    github: ["https://github.com/eluisdev/spotify-clone-simple"],
    image: "/projects/onlycode.png",
    tag: "Available for everyone",
    tags: [TAGS.REACT, TAGS.NODE, TAGS.TYPESCRIPT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github,tag }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        {image && (
          <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
              <img
                alt="Recién llegado vs 5 años en Nueva Zelanda"
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                src={image}
              />
            </div>
          </div>
        )}

        <div class={`w-full ${image ? "md:w-1/2 md:max-w-lg" : ""}`}>
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row flex-wrap mb-2 gap-1">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
              <span class="block text-yellow-500">{tag}</span>
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github.map((link) => (
                <LinkButton href={link}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              ))}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
